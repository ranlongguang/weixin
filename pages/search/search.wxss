/* pages/search/search.wxss */
page{
  height: 100%;
}
.search input{
  width:77%;
  float: left;
  border: 4rpx solid #e7e7e7;
  margin-right: 30rpx;
  border-radius: 10rpx;
  padding-left: 10rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  height: 58rpx;
}
.search{
  padding: 20rpx 20rpx;
}

.search_body{
  height:90%;
}
.search_body .search_item{
  height: 150rpx;
  border-bottom: 2rpx solid #e7e7e7;
  display: flex;
  padding: 0 20rpx;
  overflow: hidden;
  margin-top: 20rpx;
}
.search_body .search_item view{
  height: 100%;
}
.search_body .search_item .search_item_logo{
  width: 100rpx;
  height: 100rpx;
  border: 1px solid #666;
  box-sizing: border-box;
  padding: 5rpx;
  border-radius: 50%;
  margin-top: 25rpx;
}
.search_body .search_item .search_item_logo image{
  width: 100%;
  height: 100%;
}
.search_body .search_item .search_item_content{
  margin-left: 50rpx;
  width: 400rpx;
}
.search_body .search_item .search_item_content .search_item_title{
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  padding: 20rpx 0;
}
.search_body .search_item .search_item_content .search_item_p{
  display: block;
  font-size: 30rpx;
  color: #999999;
}
.search_body .search_item .search_item_button{
  margin-left: 40rpx;
  margin-top: 20rpx;
  height: 60%;
}
.search_body .search_item .search_item_button button{
  width: 100rpx;
  font-size: 22rpx;
  line-height: 45rpx;
  height: 45rpx;
}
.active {
  background-color: #e7e7e7 !important;
}